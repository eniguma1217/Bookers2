<%= flash[:notice] %>


<div class="container">
  <div class="row">
<%= render 'users/list', user:@user, book:@book %>


   <div class="col-md-8 offset-md-1">
    <table class="books">
     <h2>Book detaile</h2>
     <table class="table">
     <tbody>
      <tr>
       <th>
        <%=link_to user_path(@user) do %>
           <%=attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
           <%=@user.name %>
           <% end %>
       </th>
       <th><%=link_to @book.title %></th>
       <th><%= @book.body %></th>
       <% if @book.user == current_user %>
       <th><%=link_to "Edit" , edit_book_path(@book),class:"btn btn-sm btn-success" %></th>
       <th><%=link_to "Destroy" , book_path(@book), method: :delete,class:"btn btn-sm btn-danger" %></th>
      </tr>
      <%end%>



     </tbody>
    </table>
    </table>
   </div>
  </div>
 </div>