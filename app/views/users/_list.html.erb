<div class="col-md-3">
    <h3>User info</h3>



   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
     <tbody>
      <tr>
       <th>name</th>
       <th><%= user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
      </tr>
     </tbody>
    </table>
    <%# if user.id == current_user.id %>
    <%=link_to "", edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <%#else%>
    <%#=link_to "",user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <%# end %>

    <h1>New book</h1>

    <%= form_for (Book.new) do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %></br>
     <%= f.submit'Create Book',class:"btn btn-success" %>

     <% end %>
</div>
